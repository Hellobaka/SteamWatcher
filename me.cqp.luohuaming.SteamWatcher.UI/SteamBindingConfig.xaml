<Window
    x:Class="me.cqp.luohuaming.SteamWatcher.UI.SteamBindingConfig"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:me.cqp.luohuaming.SteamWatcher.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Steam绑定管理"
    Width="800"
    Height="600"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--  操作区域  -->
        <GroupBox
            Grid.Row="0"
            Margin="0,0,0,10"
            Header="添加绑定">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    Text="QQ号:" />
                <TextBox
                    x:Name="QQTextBox"
                    Grid.Column="1"
                    Margin="0,0,5,0" />

                <TextBlock
                    Grid.Column="2"
                    Margin="5,0,5,0"
                    VerticalAlignment="Center"
                    Text="SteamID:" />
                <TextBox
                    x:Name="SteamIDTextBox"
                    Grid.Column="3"
                    Margin="0,0,5,0" />

                <Button
                    x:Name="FetchUserInfoButton"
                    Grid.Column="4"
                    Width="100"
                    Margin="0,0,5,0"
                    Click="FetchUserInfoButton_Click"
                    Content="获取用户信息" />
                <Button
                    x:Name="AddButton"
                    Grid.Column="5"
                    Width="60"
                    Margin="0,0,5,0"
                    Click="AddButton_Click"
                    Content="添加" />
                <Button
                    x:Name="ClearButton"
                    Grid.Column="6"
                    Width="60"
                    Click="ClearButton_Click"
                    Content="清空" />
            </Grid>
        </GroupBox>

        <!--  绑定列表  -->
        <GroupBox
            Grid.Row="1"
            Margin="0,0,0,10"
            Header="绑定列表">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <ListView
                    x:Name="BindingListView"
                    Grid.Row="0"
                    ItemsSource="{Binding BindingItems}"
                    SelectionMode="Single">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                Width="100"
                                DisplayMemberBinding="{Binding QQ}"
                                Header="QQ号" />
                            <GridViewColumn
                                Width="150"
                                DisplayMemberBinding="{Binding SteamID}"
                                Header="SteamID" />
                            <GridViewColumn
                                Width="120"
                                DisplayMemberBinding="{Binding SteamName}"
                                Header="Steam用户名" />
                            <GridViewColumn
                                Width="80"
                                DisplayMemberBinding="{Binding Status}"
                                Header="状态" />
                        </GridView>
                    </ListView.View>
                </ListView>

                <StackPanel
                    Grid.Row="1"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        x:Name="EditButton"
                        Width="60"
                        Margin="0,0,5,0"
                        Click="EditButton_Click"
                        Content="编辑" />
                    <Button
                        x:Name="DeleteButton"
                        Width="60"
                        Margin="0,0,5,0"
                        Click="DeleteButton_Click"
                        Content="删除" />
                    <Button
                        x:Name="RefreshButton"
                        Width="60"
                        Click="RefreshButton_Click"
                        Content="刷新" />
                </StackPanel>
            </Grid>
        </GroupBox>

        <!--  底部按钮  -->
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="SaveButton"
                Width="80"
                Margin="0,0,10,0"
                Click="SaveButton_Click"
                Content="保存" />
            <Button
                x:Name="CloseButton"
                Width="80"
                Click="CloseButton_Click"
                Content="关闭" />
        </StackPanel>
    </Grid>
</Window>