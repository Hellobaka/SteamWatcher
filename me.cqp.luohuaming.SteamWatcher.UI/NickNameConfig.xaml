<Window
    x:Class="me.cqp.luohuaming.SteamWatcher.UI.NickNameConfig"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:me.cqp.luohuaming.SteamWatcher.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="昵称管理"
    Width="800"
    Height="450"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="5,5,5,10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <GroupBox
                Grid.Row="0"
                Margin="0,5,0,0"
                Header="玩家在每个群的昵称列表">
                <ScrollViewer Margin="5">
                    <TreeView
                        x:Name="GroupTree"
                        ItemsSource="{Binding GroupTreeNodes}"
                        SelectedItemChanged="GroupTree_SelectedItemChanged">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="True" />
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Groups}">
                                <TextBlock Text="{Binding Name}" />
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" />
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </ScrollViewer>
            </GroupBox>
            <Button
                x:Name="Save"
                Grid.Row="1"
                Margin="0,10,0,0"
                Click="Save_Click"
                IsEnabled="{Binding NotLoading}">
                保存
            </Button>
        </Grid>
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button
                x:Name="Add"
                Grid.Row="1"
                Width="30"
                Height="30"
                Margin="0,10"
                Click="Add_Click"
                IsEnabled="{Binding NotLoading}"
                ToolTip="将右侧配置的昵称 添加/更新 到左侧选中的玩家中">
                +
            </Button>
            <Button
                x:Name="Remove"
                Grid.Row="2"
                Width="30"
                Height="30"
                Margin="0,10"
                Click="Remove_Click"
                IsEnabled="{Binding NotLoading}"
                ToolTip="将左侧选中的昵称，删除">
                -
            </Button>
        </Grid>
        <GroupBox
            Grid.Column="2"
            Margin="5,5,5,10"
            Padding="5"
            Header="欲配置的昵称">
            <StackPanel>
                <TextBlock Text="群：" />
                <ComboBox
                    x:Name="GroupList"
                    Grid.Column="1"
                    IsEditable="True"
                    IsEnabled="{Binding NotLoading}"
                    ItemsSource="{Binding GroupLists}"
                    TextSearch.TextPath="Name">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock Text="昵称：" />
                <TextBox x:Name="NickNameValue" />
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
